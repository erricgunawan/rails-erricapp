<% provide :page_title, 'Login' %>

<h1>Sign in</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_tag :sessions do %>
			<%= label_tag :email %>
			<%= email_field_tag :email %>

			<%= label_tag :password %>
			<%= password_field_tag :password %>

			<%= submit_tag "Login", class: 'btn btn-primary' %>
		<% end %>
	</div>
</div>