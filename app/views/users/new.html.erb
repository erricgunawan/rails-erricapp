<% provide :page_title, 'Sign up' %>

<h1>Sign Up</h1>

<div class="row">
 	<div class="col-md-6 col-md-offset-3">

	<%= form_for(@user) do |f| %>
		<%= f.label :name %>
		<%= f.text_field :name %>

		<%= f.label :email %>
		<%= f.email_field :email %>

		<%= hidden_field_tag :hidden_man %>
<%
=begin %>
	<%= f.label :created_at %>
	<%= f.date_field :created_at %>

	<%= date_field_tag :some_date %>
<%
=end %>

		<%= f.submit "Create my account", class: 'btn btn-primary' %>
	<% end %>

	</div>
</div>